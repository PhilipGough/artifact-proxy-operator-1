{
  "kind": "DeploymentConfig",
  "apiVersion": "v1",
  "metadata": {
    "name": "artifact-proxy-operator"
  },
  "spec": {
    "template": { 
      "metadata": {
        "labels": {
          "name": "artifact-proxy-operator"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "artifact-proxy-operator",
            "image": "pbrookes/artifact-proxy-operator",
            "env": [
              {
                "name": "NAMESPACE",
                "valueFrom": {
                  "fieldRef": {
                    "fieldPath": "metadata.namespace"
                  }
                }
              }
            ]              
          }
        ]
      }
    },
    "replicas": 1 
  }
}